<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button android:id="@+id/button_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_timer"
        android:onClick="goToTimer"
        android:background="@color/bright_foreground_material_dark" />

    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendarView"
        android:backgroundTint="@color/abc_primary_text_material_dark"
        android:background="@color/accent_material_dark"
        android:layoutMode="opticalBounds"
        android:showWeekNumber="true" />

</LinearLayout>
