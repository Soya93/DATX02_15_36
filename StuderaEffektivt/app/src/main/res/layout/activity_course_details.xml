<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.chalmers.datx02_15_36.studeraeffektivt.view.CourseDetails">

    <TextView android:text="kursdetaljer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kursDetaljer"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/scrollViewOfTasks"
        android:layout_below="@+id/kursDetaljer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/layoutWithinScrollViewOfTasks"></se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lägg till uppgifter"
        android:id="@+id/taskButton"
        android:onClick="goToTasks"
        android:layout_below="@+id/scrollViewOfTasks"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/taskScrollView"
        android:layout_weight="0.42"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/taskButton"
        android:layout_alignEnd="@+id/taskButton">

        <se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/taskListfromWeb">
        </se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hämta uppgifter"
        android:id="@+id/getAssignmets"
        android:onClick="getAssignmetsFromWeb"
        android:layout_below="@+id/scrollViewOfTasks"
        android:layout_alignParentStart="true" />

</RelativeLayout>
