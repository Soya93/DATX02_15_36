<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.chalmers.datx02_15_36.studeraeffektivt.view.CourseDetails">

    <TextView android:text="kursdetaljer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kursDetaljer"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/scrollViewOfTasks"
        android:layout_below="@+id/kursDetaljer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >

        <se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/layoutWithinScrollViewOfTasks"></se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/taskButton"
        android:layout_below="@+id/scrollViewOfTasks"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grupper"
        android:id="@+id/groupsButton"
        android:layout_below="@+id/taskButton"
        android:layout_alignEnd="@+id/taskButton"
        android:layout_marginTop="45dp" />

</RelativeLayout>
