<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.chalmers.datx02_15_36.studeraeffektivt.fragment.StudyTaskFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/courseLayout"
        android:orientation="horizontal"
        android:weightSum="1.0"
        >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="0.5"
    android:weightSum="1.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/courselabel"
            android:text="KURS"
            android:textSize="17dp"
            android:layout_weight="0.5"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseSpinner"
            android:layout_weight="0.50"
            android:layout_toRightOf="@+id/courselabel"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/typeLayout"
        android:layout_below="@+id/courseLayout"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Typ och plats för uppgiften"
            android:gravity="center"
            android:textSize="17dp"
            style="?android:attr/listSeparatorTextViewStyle"
            />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLayout"
        android:layout_below="@+id/typeLayout"
        android:weightSum="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="0.5"
            android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chapterLabel"
                android:text="KAPITEL"
                android:textSize="17dp"
                android:layout_weight="0.35"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chapterSpinner"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/chapterLabel"
                android:layout_weight="0.65"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weekLabel"
            android:text="VECKA"
            android:textSize="17dp"
            android:layout_weight="0.35"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/weekSpinner"
            android:layout_below="@+id/weekLabel"
            android:layout_weight="0.65"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">
        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/readOrTaskAssignment"
            android:textOff="Läsanvisningar"
            android:textOn="Uppgifter"
            android:layout_weight="0.5"
            android:background="@android:drawable/btn_default"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/infoLyout"
        android:layout_below="@+id/firstLayout"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="uppgiften"
            android:gravity="center"
            android:textSize="17dp"
            style="?android:attr/listSeparatorTextViewStyle"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondLayout"
        android:layout_below="@+id/infoLyout"
        android:weightSum="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.35">

            <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:hint="Uppgiftsnr ex: 1-5 eller 1,2,3"
            android:digits="0123456789,-."
            android:id="@+id/taskInput"
            android:layout_weight="0.5"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ems="10"
            android:inputType="text"
            android:hint="Deluppgift(er) ex: abcd"
            android:digits="abcdefghijklmnopqrstuvwxy"
            android:id="@+id/taskParts"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/addButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.5"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/thirdLayout"
        android:layout_below="@+id/secondLayout"
        android:weightSum="1.0"
        android:layout_weight="0.65">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Spara uppgift"
            android:id="@+id/addButton"
            android:layout_toRightOf="@+id/taskLayout"
            android:layout_below="@+id/taskInput"
            android:layout_alignParentRight="true"
            android:layout_weight="0.50"/>

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fourthLayout"
        android:layout_below="@+id/secondLayout"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

    <ScrollView
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewOfTasks"
        android:layout_weight="0.5"
        android:layout_alignParentLeft="true"

         >

        <se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layoutWithinScrollViewOfTasks">
            </se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewOfReadingAssigmnents"
        android:layout_weight="0.5"
        android:layout_alignParentRight="true"
        >

           <se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/layoutWithinScrollViewOfReadingAssignments">
                </se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout>

    </ScrollView>

    </LinearLayout>

</RelativeLayout>
