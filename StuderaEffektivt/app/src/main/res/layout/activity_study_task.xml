<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.chalmers.datx02_15_36.studeraeffektivt.fragment.StudyTaskFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/firstLayout"
        android:layout_alignParentTop="true"
        android:weightSum="1.5">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:id="@+id/chapterLayout"
            android:layout_weight="0.5"
            android:layout_toLeftOf="@+id/taskLayout">

            <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chapterLabel"
            android:layout_above="@+id/chapterSpinner"
            android:layout_weight="0.80"
            android:text="KAPITEL"/>

            <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chapterSpinner"
            android:layout_weight="0.20"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/chapterLabel"/>

        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/taskLayout"
        android:layout_weight="0.5"
        android:weightSum="1"
        android:layout_toRightOf="@+id/chapterLayout">

            <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="UPPGIFT"
            android:layout_weight="0.5"/>

            <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:digits="0123456789,-."
            android:id="@+id/taskInput"
            android:layout_weight="0.5"/>
        </LinearLayout>


        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Spara uppgift"
            android:id="@+id/addButton"
            android:layout_toRightOf="@+id/taskLayout"
            android:layout_below="@+id/taskInput"
            android:layout_alignParentRight="true"
            android:layout_weight="0.52"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thirdLayout"
        android:layout_below="@+id/firstLayout"
        android:weightSum="1">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxy"
            android:id="@+id/taskParts"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/addButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="0.5"/>

        <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="New ToggleButton"
            android:id="@+id/readOrTaskAssignment"
            android:textOff="LÃ¤sanvisningar"
            android:textOn="Uppgifter"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/taskParts"
            android:layout_toStartOf="@+id/taskParts"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fifthLayout"
        android:layout_below="@+id/thirdLayout"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

    <ScrollView
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewOfTasks"
        android:layout_weight="0.5"
        android:layout_alignParentLeft="true"

         >

        <se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layoutWithinScrollViewOfTasks">
            </se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout>

    </ScrollView>

    <ScrollView
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewOfReadingAssigmnents"
        android:layout_weight="0.5"
        android:layout_alignParentRight="true"
        >

           <se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:id="@+id/layoutWithinScrollViewOfReadingAssignments">
                </se.chalmers.datx02_15_36.studeraeffektivt.view.FlowLayout>

    </ScrollView>

    </LinearLayout>

</RelativeLayout>
