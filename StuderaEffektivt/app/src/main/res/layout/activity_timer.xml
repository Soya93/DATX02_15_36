<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time left"
        android:id="@+id/text_timer"
        android:layout_weight="0.10"
        android:layout_above="@+id/button_start_timer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="162dp" />



    <Button android:id="@+id/button_start_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_start_timer"
        android:onClick="startTimer"
        android:layout_weight="0.10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_reset"
        android:layout_toLeftOf="@+id/text_timer"
        android:layout_toStartOf="@+id/text_timer" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Reset"
        android:id="@+id/button_reset"
        android:layout_gravity="right"
        android:onClick="resetTimer"
        android:layout_weight="0.10"
        android:layout_marginBottom="79dp"
        android:layout_toLeftOf="@+id/text_timer"
        android:layout_toStartOf="@+id/text_timer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="384dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="640dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/button_settings"
        android:onClick="settingsTimer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
