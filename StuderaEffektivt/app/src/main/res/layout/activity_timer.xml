<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tid kvar"
        android:id="@+id/text_timer"
        android:layout_weight="0.10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_settings"
        android:layout_alignStart="@+id/button_settings"
        android:layout_marginTop="104dp" />


    <Button
        android:id="@+id/button_start_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starta Timer"
        android:onClick="startTimer"
        android:layout_weight="0.10"
        android:layout_above="@+id/button_settings"
        android:layout_toRightOf="@+id/text_timer"
        android:layout_toEndOf="@+id/text_timer"
        android:layout_marginBottom="66dp" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Nollställ"
        android:id="@+id/button_reset"
        android:layout_gravity="right"
        android:onClick="resetTimer"
        android:layout_weight="0.10"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_settings"
        android:layout_alignStart="@+id/button_settings"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:layout_below="@+id/text_timer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ställ in tid"
        android:id="@+id/button_settings"
        android:onClick="settingsTimer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_timer"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/text_timer"
        android:layout_toStartOf="@+id/text_timer" />

</RelativeLayout>