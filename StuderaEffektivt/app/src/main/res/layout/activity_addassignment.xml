<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/courseLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="1.0">

        <Spinner
            android:id="@+id/courseSpinner"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/typeLayout"
        android:layout_below="@+id/courseLayout"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_place_title"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#03A9F4"
            style="?android:attr/listSeparatorTextViewStyle"
            />

        </LinearLayout>
        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/courseLayout"
            >


            <View
                android:id="@+id/typeLayout"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="#c0c0c0" />

            <LinearLayout
                android:id="@+id/firstLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:weightSum="1.0"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/chapterLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="@string/chapter_title"
                        android:textAlignment="gravity"
                        android:textSize="17sp" />

                    <Spinner
                    android:id="@+id/chapterSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5" />

                    <Spinner
                        android:id="@+id/oblTypesSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weekLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="@string/week_title"
                        android:textAlignment="gravity"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/weekSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5"
                        />

                    <TextView
                        android:id="@+id/olbDate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5"
                        android:textSize="15sp"
                        android:visibility="gone"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/typeLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="@string/type_title"
                        android:textAlignment="gravity"
                        android:textSize="17sp" />

                    <Spinner
                        android:id="@+id/assignmentTypeSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:id="@+id/infoLyout"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/firstLayout"
                android:layout_gravity="center_vertical"
                android:background="#c0c0c0" />

            <LinearLayout
                android:id="@+id/secondLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infoLyout"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="@string/task_title"
                        android:textAlignment="gravity"
                        android:textSize="17sp"
                        android:id="@+id/taskTitleLabel" />

                    <EditText
                        android:id="@+id/taskDigitInput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"
                        android:digits="0123456789,-."
                        android:hint="@string/task_string_hint"
                        android:inputType="text"
                        android:singleLine="true"/>

                    <EditText
                        android:id="@+id/taskTextInput"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"
                        android:inputType="text"
                        android:singleLine="true"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                   >

                    <TextView
                        android:id="@+id/taskPartsLabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="@string/part_title"
                        android:textAlignment="gravity"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/taskParts"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|bottom"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="0.5"
                        android:digits="abcdefghijklmnopqrstuvwxy"
                        android:ems="10"
                        android:hint="@string/part_string_hint"
                        android:inputType="text"
                        android:singleLine="true" />

                </LinearLayout>


            </LinearLayout>


            <View
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/secondLayout"
                android:layout_gravity="center_vertical"
                android:background="#c0c0c0" />

            <LinearLayout
                android:id="@+id/savedTaskLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/saved_tasks_title"
                    android:textColor="#03A9F4"
                    android:textSize="13sp"
                    android:id="@+id/tasks_title" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollViewOfAssigmnents"
                    android:layout_weight="0.5">

                <se.chalmers.datx02_15_36.studeraeffektivt.view.AssignmentCheckBoxLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/layoutWithinScrollViewOfTasks">
                </se.chalmers.datx02_15_36.studeraeffektivt.view.AssignmentCheckBoxLayout>

             </ScrollView>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
