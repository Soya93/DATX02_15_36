<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2"
            android:src="@drawable/sc_logo" />

            <TextView
                android:paddingTop="20dp"
                android:layout_below="@+id/imageView2"
                android:layout_width="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="StudieCoach syftar till att hjälpa studenter planera, utföra och överblicka sina studier.n\ Applikationen utvecklades till början som ett kandidatarbete på Chalmers Tekniska Högskola vårent 2015."
                android:id="@+id/about_text"
                android:layout_centerHorizontal="true" />

        <TextView
            android:paddingTop="20dp"
            android:layout_below="@+id/about_text"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gilla oss på Facebook:"
            android:id="@+id/fb_text"
            android:layout_centerHorizontal="true" />

        <TextView
            android:paddingTop="20dp"
            android:layout_below="@+id/fb_text"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Utvecklad av:n\ Sara Nadi, Alexandra Back, Patricia Paulsson, Emma Westman, Jesper Karlberg"
            android:id="@+id/developer_text"
            android:layout_centerHorizontal="true" />



</RelativeLayout>
